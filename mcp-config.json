{
  "mcpServers": {
    "github": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_TOKEN}"
      }
    },
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "${ALLOWED_DIRECTORY}"
      ]
    },
    "postgres": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-postgres"],
      "env": {
        "POSTGRES_CONNECTION_STRING": "${DATABASE_URL}"
      }
    },
    "slack": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-slack"],
      "env": {
        "SLACK_BOT_TOKEN": "${SLACK_TOKEN}"
      }
    }
  },
  
  "_notes": {
    "enabled": "Set environment variable MCP_SERVERS to comma-separated list of servers to enable",
    "example": "MCP_SERVERS=github,slack npx ts-node agent.ts 'your task'",
    "envVars": {
      "GITHUB_TOKEN": "Get from https://github.com/settings/tokens",
      "DATABASE_URL": "PostgreSQL connection string",
      "SLACK_TOKEN": "Get from https://api.slack.com/apps",
      "ALLOWED_DIRECTORY": "Directory path for filesystem server access"
    }
  }
}
